---
import HeaderButton from "./HeaderButton.astro";
import HeaderButton2 from "./HeaderButton2.astro";
import HeaderButton3 from "./HeaderButton3.astro";
---

<header class="fixed bottom-0 left-0 right-0 w-full bg-gray-800 text-white z-50 flex items-center h-16 p-2">
  <nav class="w-full flex items-center justify-center">
    <!-- Botón de Buscar -->
    <HeaderButton href="/#search" class="mr-2 mb-2 flex items-center">
      <!-- Ícono de lupa SVG -->
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-search">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
        <path d="M21 21l-6 -6" />
      </svg>
      <span class="ml-2">Buscar</span>
    </HeaderButton>

   <!-- Botón de windows (solo ícono, activo) -->
<HeaderButton2 href="/#settings" class="mr-2 mb-2 flex items-center">
  <!-- Ícono de windows SVG -->
